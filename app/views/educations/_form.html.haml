= form_for @education do |f|
  - if @education.errors.any?
    #error_explanation
      %h2= "#{pluralize(@education.errors.count, "error")} prohibited this education from being saved:"
      %ul
        - @education.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :school
    = f.text_field :school
  .field
    = f.label :degree_id
    = f.number_field :degree_id
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :start_date
    = f.date_select :start_date
  .field
    = f.label :end_date
    = f.date_select :end_date
  .actions
    = f.submit 'Save'
