          %span Remote Only
          %input{:checked => "", :name => "my-checkbox", :type => "checkbox"}/
        .col-md-3.text-right
          = link_to "Find Now", jobs_path, class: "btn btn-primary action-btn", id: "find-jobs"
  .container.padded-container
    .row
      .col-md-2
        %p
          = link_to "Positions Viewed", jobs_path
        %p
          = link_to "Matches", jobs_path
        %p
          = link_to "Saved", candidate_job_saved_path
        %p
          = link_to "All", jobs_path
      .col-md-10
        .row
          .col-md-4
            %h3 Position
          .col-md-2
            %h3 Salary
          .col-md-3
            %h3 Location
          .col-md-3
        .small
        - @candidate_job_action.each do |candidate_job_action|
          .row
            = link_to job_path(candidate_job_action.job) do
              .col-md-4
                %h4
                  = candidate_job_action.job.title
              .col-md-2
                %b
                  Salary Range
                %br
                = "$#{candidate_job_action.job.salary_low}"
                \-
                = "$#{candidate_job_action.job.salary_high}"
              .col-md-3
                %b
                  Location
                %br
                = "#{candidate_job_action.job.city}, #{candidate_job_action.job.state.name}"
            .col-md-3
              = link_to 'View', job_path(candidate_job_action.job), class: "btn btn-primary"
          %hr