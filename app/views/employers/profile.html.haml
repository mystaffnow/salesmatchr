.bg-highlight
  .container
    .row
      .col-md-10
      .col-md-2
        = link_to 'Edit Profile', employers_account_path
        = link_to 'Edit Settings', edit_employer_registration_path
.wrapper-sm
  .container
    .row
      .col-md-2
        = image_tag current_employer.avatar.url
      .col-md-4
        %h4
          = current_employer.name
        = current_employer.company
        %p
          = "#{current_employer.city} #{current_employer.state ? current_employer.state.name: ''}, #{current_employer.zip}"

.wrapper-sm
  .container
    .row
      .col-md-12
        - if current_employer.ziggeo_token != nil
          %ziggeo{ 'ziggeo-video' => current_employer.ziggeo_token, 'ziggeo-width' => 553, 'ziggeo-height' => 297}
        = current_employer.description
