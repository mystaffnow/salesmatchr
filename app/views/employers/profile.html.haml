.employer-profile
  .container.padded-container
    .row
      .col-md-3
        = image_tag @profile.avatar.url(:medium)
      .col-md-9
        %h2= current_employer.company
        %h5= "#{@profile.city} #{@profile.state ? @profile.state.name: ''}, #{@profile.zip}"
        %br
        %p= @profile.description
        %br
        = link_to "Edit Profile", employers_account_path, class: "btn btn-default"
        = link_to 'Create New Job', new_job_path, class: 'btn btn-default'
    - if @profile.ziggeo_token?
      %hr
      .row
        .col-md-6.col-md-offset-3
          %ziggeo{ 'ziggeo-video' => @profile.ziggeo_token, 'ziggeo-width' => 538, 'ziggeo-height' => 288}
