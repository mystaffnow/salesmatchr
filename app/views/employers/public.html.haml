.profile
  .container.padded-container
    .row
      .col-md-12.text-center
        = image_tag @employer.avatar.url
    .text-center
      %h2= @employer.company
      %h5= "#{@employer.city} #{@employer.state ? @employer.state.name: ''}, #{@employer.zip}"

    %hr

    .row
      .col-md-6
        %h2= "About #{@employer.company}"
        = @employer.description
      .col-md-6
        - if @employer.ziggeo_token != nil && @employer.ziggeo_token != ''
          %ziggeo{ 'ziggeo-video' => @employer.ziggeo_token, 'ziggeo-width' => 553, 'ziggeo-height' => 297}
