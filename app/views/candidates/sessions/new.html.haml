.container.padded-container
  .account-panel
    .account-header
      %h2 Candidate Sign In
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = link_to "Are you an employer looking to post jobs? Sign in here", new_employer_session_path
    .account-content
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .actions
          = link_to candidate_omniauth_authorize_path(:linkedin) do
            .btn.btn-default
              %i.fa.fa-linkedin
              %span Sign up with LinkedIn
        %br
        %hr
        %br
        .field
          = f.label :email
          %br/
          = f.email_field :email, autofocus: true, class: "form-control"
        .field
          = f.label :password
          %br/
          = f.password_field :password, autocomplete: "off", class: "form-control"
        - if devise_mapping.rememberable?
          .field
            = f.check_box :remember_me
            = f.label :remember_me
          %br
        .actions
          = f.submit "Sign In", class: "btn btn-default"
        .field
          = link_to "Forgot your password?", new_password_path(resource_name)