<script>
  var subscription;

  $(document).ready(function() {
    Stripe.setPublishableKey($('meta[name="stripe-key"]').attr('content'));
    return subscription.setupForm();
  });

  subscription = {
    setupForm: function() {
      return $('#new_user').submit(function() {
        $("#stripe_error").hide();
        $('input[type=submit]').attr('disabled', true);
        subscription.processCard();
        return false;
      });
    },
    processCard: function() {
      var card, charge;
      card = {
        number: $('#card_number').val(),
        cvc: $('#card_code').val(),
        expMonth: $('#card_month').val(),
        expYear: $('#card_year').val()
      };
      return Stripe.createToken(card, subscription.handleStripeResponse);
    },
    handleStripeResponse: function(status, response) {
      if (status === 200) {
        console.log('stripe card token')
        console.log(response.id)
        $('#job_payment_stripe_card_token').val(response.id);
        $('#new_user')[0].submit();
      } else {
        $('input[type=submit]').attr('disabled', false);
        $('#stripe_error').show();
        $('#stripe_error').html(response.error.message)
      }
    }
  };

  function isNumber(which) {
    var val = which.value;
    val = val.replace(/[^0-9]/g, '');  // strip non-digits
    which.value = val;
  }

  $(function(){
    $('.wysihtml5').each(function(i, elem) {
      $(elem).wysihtml5();
    });

    $('#pay-btn').click(function(e) {
      $('#salary_low').val(salary_slider.slider('getValue')[0]);
      $('#salary_high').val(salary_slider.slider('getValue')[1]);
      $('#waiting').show();
      $('#new_user').submit();
    });
  });
</script>