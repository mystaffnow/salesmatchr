.action-bar
  .container
    .row
      .col-md-8
        %h2= @job.title
      .col-md-4.text-right
        - if candidate_signed_in?
          - if !current_candidate.has_applied(@job)
            = link_to 'Apply Now', create_job_candidates_path(@job), class: 'btn btn-default', :data => { :confirm => 'Are you sure?' }
          - else
            %h2
              = current_candidate.job_status @job

.container.padded-container
  .row
    .col-md-7
      %h2
        = "About "
        = link_to @job.employer.name, employers_public_path(@job.employer)
      %p
        = @job.employer.description
      %hr
      %h2
        = @job.title
      %p
        = @job.description
    .col-md-4.col-md-offset-1
      #account
        .account-panel
          .account-header
            %h2
              Job Details
          .account-content
            %p
              %h4 Salary
              %p= "$#{@job.salary_low} - $#{@job.salary_high}"
            %p
              %h4 Location
              %p= "#{@job.city} #{@job.state.name}, #{@job.zip}"
            %p
              %h4 Is remote
              %p= @job.is_remote ? 'yes' : 'no'