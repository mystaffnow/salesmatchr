.wrapper-sm
  = form_for @job do |f|
    - if @job.errors.any?
      #error_explanation
        %h2= "#{pluralize(@job.errors.count, "error")} prohibited this job from being saved:"
        %ul
          - @job.errors.full_messages.each do |msg|
            %li= msg
    .field
      = f.label :title
      = f.text_field :title, class: 'form-control'
    .field
      = f.label :description
      = f.text_area :description, class: 'form-control'
    .field
      %label
        Job Function
      %br
      = f.collection_select(:job_function_id, JobFunction.all, :id, :name,  {:class => 'form-control'})
    .field
      = f.label :salary_low
      = f.number_field :salary_low, class: 'form-control'
    .field
      = f.label :salary_high
      = f.number_field :salary_high, class: 'form-control'
    .field
      = f.label :city
      = f.text_field :city, class: 'form-control'
    .field
      = f.label :state
      %br
      = f.collection_select(:state_id, State.all, :id, :name,  {:class => 'form-control'})
      %br
    .field
      = f.label :zip
      = f.number_field :zip, class: 'form-control'
    .field
      = f.label :is_remote
      = f.check_box :is_remote, class: 'form-control'
    .actions
      = f.submit 'Save', class: 'btn btn-primary'
