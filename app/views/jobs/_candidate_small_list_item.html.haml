- if candidate.candidate_profile.is_incognito
  .row
    .col-md-2
      %img{src: candidate.candidate_profile.avatar_url, style: 'width: 100%'}
    .col-md-6
      %h3
        = candidate.first_name
      = get_location candidate.candidate_profile
      %p
        = link_to "Send candidate a message", send_job_candidate_intro_path(job, candidate), :remote => true, data: {:confirm => "This will send the candidate a message that you are interested in them for this job.  Press ok to confirm."}
    .col-md-4
      %h4 Education
      - if candidate.candidate_profile.education_level
        = candidate.candidate_profile.education_level.name
- else
  .row
    .col-md-2
      = link_to candidates_profile_path(candidate) do
        %img{src: candidate.candidate_profile.avatar_url}
    .col-md-6
      = link_to candidates_profile_path(candidate) do
        %h3
          = candidate.name
        = get_location candidate.candidate_profile
      %br
      %br
      %p
        = mail_to candidate.email, "Email Candidate"
    .col-md-4
      %h4 Education
      - if candidate.candidate_profile.education_level
        = candidate.candidate_profile.education_level.name