%h1 Listing experiences

%table
  %thead
    %tr
      %th Position
      %th Company
      %th Description
      %th Start date
      %th End date
      %th Is current
      %th Is sales
      %th Sales type
      %th
      %th
      %th
      
  %tbody
    - @experiences.each do |experience|
      %tr
        %td= experience.position
        %td= experience.company
        %td= experience.description
        %td= experience.start_date
        %td= experience.end_date
        %td= experience.is_current
        %td= experience.is_sales
        %td= experience.sales_type_id
        %td= link_to 'Show', experience
        %td= link_to 'Edit', edit_experience_path(experience)
        %td= link_to 'Destroy', experience, :method => :delete, :data => { :confirm => 'Are you sure?' }

